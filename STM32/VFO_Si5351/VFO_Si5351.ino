void u8g2_prepare(void) {
  u8g2.setFont(u8g2_font_ncenB14_tr);
  u8g2.setFontRefHeightExtendedText();
  u8g2.setDrawColor(1);
  u8g2.setFontPosTop();
  u8g2.setFontDirection(0);
}

void displayFreq(float freq) {
  char buffer[12];
  dtostrf(freq,9,5,buffer);
  buffer[9] = buffer[8];
  buffer[8] = buffer[7];
  buffer[7] = ',';
  buffer[10] = 0;
  u8g2.drawStr( 0, 0, buffer);
}

void setup(void) {
  u8g2.begin();
}

void loop(void) {
  float freq = 14.00000;
  while(1)
  {
    u8g2.clearBuffer();
    u8g2_prepare();
    displayFreq(freq);
    u8g2.sendBuffer();
    freq += 0.00001;
    if (freq > 14.350)
      freq = 14.00000;
  }  
  // deley between each page
  delay(1000);

}
